{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}